{% capture callout_box_content %}
    <div class="callout-box-content">
        {% if collection.metafields.custom.callout_box_link != blank %}
        <a href="{{ collection.metafields.custom.callout_box_link }}">
        {% endif %}
            <img class="callout-box-img"
            src="{{ collection.metafields.custom.callout_box_image | image_url: width: 605 }}" 
            width="605" height="auto"
            loading="lazy">
        {% if collection.metafields.custom.callout_box_link != blank %}
        </a>
        {% endif %}
    </div>
{% endcapture %}

<div class="product-item callout-box">
    {{ callout_box_content }}

    <style type="text/css">
        .product-item.callout-box{
            grid-area: {{ callout_box_row }} / {{ callout_box_column }} / {{  callout_box_row }} / {{ callout_box_column | plus: 2}};
        }
        @media screen and (max-width: 1399px){
        .product-item.callout-box{
            grid-area: {{ callout_box_row_mobile }} / {{ callout_box_column_mobile }} / {{  callout_box_row_mobile }} / {{ callout_box_column_mobile | plus: 2}};
            }
        }
        .product-item.callout-box img{
            width: 100%;
            height: auto;
        }
    </style>
</div>